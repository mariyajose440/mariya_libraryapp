            <label for="" style=" font-family: 'Brush Script MT', cursive; font-size: 25px; ">PHONE :  </label>
            <input type="text" id="phone" name="phone" style="margin-left: 10px;"  onkeyup="validphn();" required><br><br><br>
            <label for="" style=" font-family: 'Brush Script MT', cursive; font-size: 20px; ">PASSWORD :  </label>
            <input type="password" id="password" name="password" style="margin-left: 10px;" onkeyup="validpass()" required><br><br><br>
            <label for="" style="font-family: 'Brush Script MT', cursive; font-size: 20px; ">RETYPE PASSWORD :  </label>
            <input type="password" id="respassword" name="repassword" style="margin-left: 10px;" onkeyup="repass()"  required><br><br><br>
            <script>
              let email=document.getElementById("email");
              let reg= /^([A-Za-z0-9\.-]+)@([A-Za-z0-9\-]+).([a-z]{2,3})(.[a-z]{2,3})?$/;
              let exp=/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$/;
              let phn1=/^([0-9]{10})$/
              let phn=document.getElementById("phone");
              let repassword=document.getElementById("respassword");
              let pass=document.getElementById("password");
              function repass()
              {
              if(password.value.match(repassword.value))
              {
              repassword.style.border="4px solid green";
              }
              else
              {
              repassword.style.border="4px solid red";
              }
              }
              function validemail()
              {
              if(reg.test(email.value))
              {
              email.style.border="5px solid green";
              }
              else
              {
              email.style.border="5px solid red";
              } 
              } 
              function validpass()
              {
              if(exp.test(password.value))
              {
              password.style.border="5px solid green";
              }
              else
              {
              password.style.border="5px solid red";
              }
              }
              function validphn()
              {
              if(phn1.test(phn.value))
              {
              phn.style.border="5px solid green";
              }
              else
              {
              phn.style.border="5px solid red";
              }
              }
              function submit1()
              {
              if((exp.test(password.value))&&(reg.test(email.value))&&(phn1.test(phn.value))&&(password.value===(repassword.value)))
              {
              return true;
              }
              else
              {
              return false;
              }
              }   
            </script>
            
